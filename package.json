{
  "name": "hackuta-full-stack-template",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "setup": "pnpm db:generate && pnpm db:migrate",
    "db:generate": "pnpm --filter @repo/db exec prisma generate",
    "db:migrate": "pnpm --filter @repo/db exec prisma migrate dev",
    "db:studio": "pnpm --filter @repo/db exec prisma studio"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}